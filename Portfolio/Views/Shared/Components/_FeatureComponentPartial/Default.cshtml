@model List<Portfolio.DAL.Entities.Feature>

<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="https://i.hizliresim.com/cnzexz1.jpg" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    @foreach (var item in Model)
    {
        <div class="home-content">

            <div class="row home-content__main">

                <h3>@item.Title</h3>

                <h1>
                    @Html.Raw(item.Description.Replace(".", ".<br />"))
                </h1>

                <div class="home-content__buttons">
                    <a href="https://github.com/berkerertan" target="_blank" class="btn btn--stroke">
                        Github
                    </a>
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        Hakkımda
                    </a>
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Aşağı Kaydır</span>
                    </a>
                </div>

            </div>

        </div>
    }

     <!-- end home-content -->

    <ul class="home-social">
        <li>
            <a href="https://github.com/berkerertan"><i class="im im-github" target="_blank" aria-hidden=" true"></i><span>Github</span></a>
        </li>
        <li>
            <a href="https://www.linkedin.com/in/berkerertan/"><i class="im im-linkedn" aria-hidden="true"></i><span>Linkedn</span></a>
        </li>
    </ul>
    <!-- end home-social -->

</section>
