@model List<Portfolio.DAL.Entities.Skill>

<div class="col-six tab-full right">
    <h3>Kullandığım bazı teknolojiler.</h3>


    <style>
    .skills-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        padding: 20px;
        background-color: #f0f0f0;
        border-radius: 8px;
    }

    .skill {
        width: calc(50% - 20px);
        margin-bottom: 20px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        font-weight: bold;
    }

</style>

<div class="skills-container">
    @foreach (var item in Model)
    {
        <div class="skill">
            @item.Title
        </div>
    }
</div>
