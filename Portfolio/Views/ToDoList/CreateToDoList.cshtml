@model ToDoList
@{
    ViewData["Title"] = "CreateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yapılacaklar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yeni Yapılacak İşlem Ekleme</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Deneyimler ile ilgili ekleme işlemini aşağıdaki panelden yapabilirsiniz.
						</div>
						<form method="post">

							<label>Başlık</label>
							<input type="text" asp-for="Title" />
							<br />

							<label>Tarih</label>
							<input type="date" asp-for="Date" />
							<br />

							<label>Görsel Yolu</label>
							<input type="text" asp-for="ImageUrl" />
							<br />

							<button class="btn btn-primary">Yapılacak işi Ekle</button>
						</form>

					</div>
				</div>
			</div>

		</div>
	</div>
</div>

