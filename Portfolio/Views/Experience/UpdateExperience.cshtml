@model Experience

@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Deneyimler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Deneyim Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Deneyimler ile ilgili ekleme işlemini aşağıdaki panelden yapabilirsiniz.
						</div>

						<form method="post">
							<input type="hidden" asp-for="ExperienceId" />

							<label>Firma Bilgisi</label>
							<input type="text" asp-for="Head" />
							<br />

							<label>Pozisyon</label>
							<input type="text" asp-for="Title" />
							<br />

							<label>Tarih</label>
							<input type="text" asp-for="Date" />
							<br />

							<label>Açıklama</label>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea>
							<br />
							<button class="btn btn-primary">Deneyim Ekle</button>
						</form>

					</div>
				</div>
			</div>

		</div>
	</div>
</div>



