@model About

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımda Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımda ile ilgili ekleme işlemini aşağıdaki panelden yapabilirsiniz.
						</div>
						<form method="post">

							<label>Başlık</label>
							<input type="text" asp-for="Title" />
							<br />

							<label>Alt Açıklama</label>
							<input type="text" asp-for="SubDescripton" />
							<br />


							<label>Detaylar</label>
							<textarea rows="4" class="form-control" asp-for="Details"></textarea>
							<br />
							<button class="btn btn-primary">Deneyim Ekle</button>
						</form>

					</div>
				</div>
			</div>

		</div>
	</div>
</div>

